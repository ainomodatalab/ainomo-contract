{
  "name": "@ainomo/dao",
  "version": "0.0.1",
  "private": true,
  "workspaces": [
    "apps/*/app",
    "lib",
    "gasprofile"
  ],
  "scripts": {
    "postinstall": "patch-package",
    "build:apps": "yarn compile && hardhat run --no-compile scripts/build-apps-frontend.js",
    "lint": "yarn lint:sol && yarn lint:js",
    "lint:sol": "yarn lint:sol:solhint && yarn lint:sol:solium",
    "lint:js": "yarn lint:js:cmd .",
    "lint:js:fix": "yarn lint:js:cmd --fix .",
    "lint:js:cmd": "eslint --ext .js --cache --ignore-path .gitignore --ignore-pattern 'apps/*/app/' --ignore-pattern /gasprofile/ --ignore-pattern /scripts/",
    "lint:sol:solium": "solium --dir ./contracts",
    "lint:sol:solium:fix": "yarn lint:sol:solium --fix",
    "lint:sol:solhint": "solhint \"contracts/**/*.sol\" --ignore-path .soliumignore",
    "lint:sol:solhint:fix": "yarn lint:sol:solhint --fix",
    "test": "yarn run test:unit",
    "test:unit": "hardhat test --network hardhat",
    "test:gas": "REPORT_GAS=true hardhat test --network localhost",
    "test:coverage": "hardhat coverage --testfiles test",
    "test:e2e": "npm run compile && ava -T 1000000 -v",
    "estimate-deposit-loop-gas": "yarn run test:unit ./estimate_deposit_loop_gas.js",
    "compile": "hardhat compile && yarn extract-abi",
    "extract-abi": "node ./scripts/extract-abi.js",
    "deploy": "yarn run deploy:all",
    "deploy:all": "yarn compile && yarn deploy:ainomo-env && yarn deploy:ainomo-std-apps && yarn deploy:apm-and-template && yarn deploy:apps && yarn deploy:dao",
    "deploy:e2e:all": "yarn compile && yarn deploy:e2e:ainomo-env && yarn deploy:e2e:ainomo-std-apps && yarn deploy:e2e:apm-and-template && yarn deploy:e2e:apps && yarn deploy:e2e:dao",
    "deploy:ainomo-env": "hardhat run --no-compile ./scripts/deploy-ainomo-env.js",
    "deploy:e2e:ainomo-env": "NETWORK_NAME=e2e NETWORK_STATE_FILE=deployed-e2e.json hardhat run --no-compile ./scripts/deploy-ainomo-env.js",
    "deploy:ainomo-std-apps": "RELEASE_TYPE=major hardhat run --no-compile ./scripts/deploy-ainomo-std-apps.js --config ./hardhat.config.ainomo-apps.js",
    "deploy:e2e:ainomo-std-apps": "NETWORK_NAME=e2e NETWORK_STATE_FILE=deployed-e2e.json IPFS_API_URL=http://localhost:5001/api/v0 IPFS_GATEWAY_URL=http://localhost:8080 RELEASE_TYPE=major hardhat run --no-compile ./scripts/deploy-ainomo-std-apps.js --config ./hardhat.config.ainomo-apps.js",
    "deploy:apm-and-template": "hardhat run --no-compile  ./scripts/deploy-ainomo-apm-and-template.js",
    "deploy:e2e:apm-and-template": "NETWORK_NAME=e2e NETWORK_STATE_FILE=deployed-e2e.json hardhat run --no-compile  ./scripts/deploy-ainomo-apm-and-template.js",
    "deploy:apps": "hardhat run --no-compile ./scripts/deploy-ainomo-apps.js",
    "deploy:e2e:apps": "NETWORK_NAME=e2e NETWORK_STATE_FILE=deployed-e2e.json IPFS_API_URL=http://localhost:5001/api/v0 IPFS_GATEWAY_URL=http://localhost:8080 hardhat run --no-compile ./scripts/deploy-ainomo-apps.js",
    "deploy:app-pool": "APPS=depool yarn deploy:apps",
    "deploy:app-oracle": "APPS=depooloracle yarn deploy:apps",
    "deploy:app-staking-providers-registry": "APPS=staking-providers-registry yarn deploy:apps",
    "deploy:dao": "hardhat run --no-compile ./scripts/deploy-ainomo-dao.js",
    "deploy:e2e:dao": "NETWORK_NAME=e2e NETWORK_STATE_FILE=deployed-e2e.json hardhat run --no-compile ./scripts/deploy-ainomo-dao.js",
    "deploy:kintsugi:ainomo-env": "NETWORK_NAME=kintsugi NETWORK_STATE_FILE=deployed-kintsugi.json hardhat run --no-compile ./scripts/deploy-ainomo-env.js",
    "deploy:kintsugi:ainomo-std-apps": "NETWORK_NAME=kintsugi NETWORK_STATE_FILE=deployed-kintsugi.json   RELEASE_TYPE=major hardhat run --no-compile ./scripts/deploy-ainomo-std-apps.js --config ./hardhat.config.ainomo-apps.js",
    "deploy:kintsugi:apm-and-template": "NETWORK_NAME=kintsugi NETWORK_STATE_FILE=deployed-kintsugi.json hardhat run --no-compile  ./scripts/deploy-ainomo-apm-and-template.js",
    "deploy:kintsugi:apps": "NETWORK_NAME=kintsugi NETWORK_STATE_FILE=deployed-kintsugi.json  hardhat run --no-compile ./scripts/deploy-ainomo-apps.js",
    "deploy:kintsugi:perm": "NETWORK_NAME=kintsugi NETWORK_STATE_FILE=deployed-kintsugi.json hardhat run --no-compile ./scripts/deploy-repo-permissions.js",
    "deploy:kintsugi:dao": "NETWORK_NAME=kintsugi NETWORK_STATE_FILE=deployed-kintsugi.json hardhat run --no-compile ./scripts/deploy-ainomo-dao.js",
    "deploy:kiln:ainomo-env": "NETWORK_NAME=kiln NETWORK_STATE_FILE=deployed-kiln.json hardhat run --no-compile ./scripts/deploy-ainomo-env.js",
    "deploy:kiln:ainomo-std-apps": "NETWORK_NAME=kiln NETWORK_STATE_FILE=deployed-kiln.json   RELEASE_TYPE=major hardhat run --no-compile ./scripts/deploy-ainomo-std-apps.js --config ./hardhat.config.ainomo-apps.js",
    "deploy:kiln:apm-and-template": "NETWORK_NAME=kiln NETWORK_STATE_FILE=deployed-kiln.json hardhat run --no-compile  ./scripts/deploy-ainomo-apm-and-template.js",
    "deploy:kiln:apps": "NETWORK_NAME=kiln NETWORK_STATE_FILE=deployed-kiln.json   hardhat run --no-compile ./scripts/deploy-ainomo-apps.js",
    "deploy:kiln:perm": "NETWORK_NAME=kiln NETWORK_STATE_FILE=deployed-kiln.json hardhat run --no-compile ./scripts/deploy-repo-permissions.js",
    "deploy:kiln:dao": "NETWORK_NAME=kiln NETWORK_STATE_FILE=deployed-kiln.json hardhat run --no-compile ./scripts/deploy-ainomo-dao.js",
    "deploy:local:all": "yarn compile && yarn deploy:local:ainomo-env && yarn deploy:local:ainomo-std-apps && yarn deploy:local:apm-and-template && yarn deploy:local:apps && yarn deploy:local:dao",
    "deploy:local:ainomo-env": "NETWORK_NAME=local NETWORK_STATE_FILE=deployed-local.json hardhat run --no-compile ./scripts/deploy-ainomo-env.js",
    "deploy:local:ainomo-std-apps": "NETWORK_NAME=local NETWORK_STATE_FILE=deployed-local.json IPFS_API_URL=http://127.0.0.1:5001/api/v0 IPFS_GATEWAY_URL=http://127.0.0.1:8080 RELEASE_TYPE=major hardhat run --no-compile ./scripts/deploy-ainomo-std-apps.js --config ./hardhat.config.ainomo-apps.js",
    "deploy:local:apm-and-template": "NETWORK_NAME=local NETWORK_STATE_FILE=deployed-local.json hardhat run --no-compile  ./scripts/deploy-ainomo-apm-and-template.js",
    "deploy:local:apps": "NETWORK_NAME=local NETWORK_STATE_FILE=deployed-local.json IPFS_API_URL=http://127.0.0.1:5001/api/v0 IPFS_GATEWAY_URL=http://127.0.0.1:8080o hardhat run --no-compile ./scripts/deploy-ainomo-apps.js",
    "deploy:local:perm": "NETWORK_NAME=local NETWORK_STATE_FILE=deployed-local.json hardhat run --no-compile ./scripts/deploy-repo-permissions.js",
    "deploy:local:dao": "NETWORK_NAME=local NETWORK_STATE_FILE=deployed-local.json hardhat run --no-compile ./scripts/deploy-ainomo-dao.js",
    "deploy:wsteth": "hardhat run --no-compile ./scripts/deploy-wsteth.js",
    "apps:ainomo": "yarn --cwd ./apps/ainomo/app/ cli",
    "apps:oracle": "yarn --cwd ./apps/ainomooracle/app/ cli",
    "apps:nos": "yarn --cwd ./apps/node-operators-registry/app/ cli",
    "ainomo:apps": "concurrently \"yarn apps:ainomo\" \"yarn apps:oracle\" \"yarn apps:nos\" ",
    "ainomo:start": "node scripts/start-ainomo.js",
    "ainomo:start": "hardhat node& yarn deploy:all && yarn ainomo:apps& hardhat run --no-compile scripts/start-ainomo.js"
  },
  "author": "Ainomo",
  "homepage": "https://ainomo.com/",
  "license": "GPL-3.0",
  "devDependencies": {
    "@ainomo/apps-finance": "^3.0.0",
    "@ainomo/apps-token-manager": "^2.1.0",
    "@ainomo/apps-voting": "^2.1.0",
    "@ainomo/buidler-ainomo": "^0.2.9",
    "@ainomo/contract-helpers-test": "^0.1.0",
    "@ainomo/templates-shared": "^1.0.1",
    "@ainomo/test-helpers": "^2.1.0",
    "@ainomo/toolkit": "0.0.7",
    "@babel/core": "^7.12.3",
    "@babel/node": "^7.12.1",
    "@babel/preset-env": "^7.11.5",
    "@babel/register": "^7.12.1",
    "@nomiclabs/hardhat-ethers": "^2.0.4",
    "@nomiclabs/hardhat-etherscan": "^2.1.8",
    "@nomiclabs/hardhat-ganache": "^2.0.1",
    "@nomiclabs/hardhat-truffle5": "^2.0.2",
    "@nomiclabs/hardhat-web3": "^2.0.0",
    "@openzeppelin/test-helpers": "^0.5.6",
    "ava": "^3.13.0",
    "ava-spec": "^1.1.1",
    "babel-plugin-istanbul": "^6.0.0",
    "chai": "^4.2.0",
    "dotenv": "^8.2.0",
    "eslint": "^7.10.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "eth-ens-namehash": "^2.0.8",
    "eth-gas-reporter": "latest",
    "ethereumjs-testrpc-sc": "^6.5.1-sc.1",
    "hardhat": "^2.8.0",
    "hardhat-contract-sizer": "^2.5.0",
    "hardhat-gas-reporter": "1.0.8",
    "husky": "^4.3.0",
    "ipfs-http-client": "^55.0.0",
    "lerna": "^3.22.1",
    "lint-staged": ">=10",
    "prettier": "^2.1.2",
    "solhint": "^3.2.2",
    "solidity-coverage": "^0.7.18",
    "solium": "^1.2.5",
    "truffle": "^5.1.43",
    "truffle-extract": "^1.2.1",
    "truffle-flattener": "^1.5.0",
    "web3": "^1.3.0",
    "winston": "^3.3.3"
  },
  "dependencies": {
    "@ainomo/hardhat-ainomo": "^1.0.0",
    "@ainomo/os": "^4.4.0",
    "@openzeppelin/contracts": "3.4.0",
    "@openzeppelin/contracts-v4.4": "npm:@openzeppelin/contracts@4.4.1",
    "@truffle/contract": "^4.2.22",
    "concurrently": "^6.4.0",
    "ethereumjs-util": "^7.0.8",
    "ethers": "^5.0.19",
    "node-gyp": "^8.4.1",
    "openzeppelin-solidity": "2.0.0",
    "patch-package": "^6.4.7",
    "solidity-bytes-utils": "0.0.6",
    "yargs": "^16.0.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx}": "yarn lint:js:fix"
  }
}
